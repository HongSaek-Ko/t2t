<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.t2t.prd.repository.ProductMapper">
    <select id="findGoodById" parameterType="hashmap" resultType="org.t2t.prd.dto.GoodDTO">
        SELECT G.* FROM
            PRD R LEFT OUTER JOIN GOOD G
        ON R.PRDID = G.PRDID
        WHERE
            G.USRID = #{usrId}
    </select>

    <delete id="deleteGood" parameterType="hashmap" >
        DELETE FROM GOOD
        WHERE
            PRDID = #{prdId} AND
            USRID = #{usrId}

    </delete>
    <insert id="insertGood" parameterType="hashmap" >
        INSERT INTO GOOD
        (prdId, usrId)
        VALUES
        (#{prdId}, #{usrId})
    </insert>
</mapper>